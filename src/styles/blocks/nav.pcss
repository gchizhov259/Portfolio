.navigation__menu {
  display: flex;
  
  @include tablets {
    flex-wrap: wrap;
  }

  &:last-child {
    margin-right: 0;
  }
}

.navigation__link {
  font-family: "open-sans-regular";
  font-size: 16px;
  color: $nav_menu-color;
  white-space: nowrap;
}

.navigation__item {
  margin-right: 60px;

  &:last-child {
    margin-right: 0;
  }
}