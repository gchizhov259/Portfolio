include ./mixins.pug
doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        section.intro
          .container.intro__container
            header.intro__header
              .intro__logo
                .logo ГЧ
              .intro__menu
                - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                nav.navigation
                  ul.navigation__menu
                    each item in menu
                      li.navigation__item
                        a.navigation__link #{item}
              .intro__links
                - var icons = ["insta", "vk", "github"];
                ul.socials
                  each item in icons
                    li.socials__item
                      a.socials__link(href='#')
                        +icon(item, 'socials__icon')
            .intro__content
              .intro__title
                | Личный сайт
                br
                | веб разработчика
              h1.intro__dev-name
                | Григорий
                br
                | Чижов
            .intro__scroll-btn
              a.scroll-btn Скролл
                +icon('scroll', 'scroll-icon')