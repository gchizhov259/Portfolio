section.welcome
          .container.welcome__container
            header.welcome__header
              .welcome__logo
                .logo ГЧ
              .welcome__menu
                - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"];
                nav.navigation
                  ul.navigation__menu
                    each item in menu
                      li.navigation__item
                        a.navigation__link #{item}
              .welcome__links
                - var icons = ["insta", "vk", "github"];
                ul.socials
                  each item in icons
                    li.socials__item
                      a.socials__link(href='#')
                        +icon(item, 'socials__icon')
            .welcome__content
              .welcome__title
                | Личный сайт
                br
                | веб разработчика
              h1.welcome__dev-name
                | Григорий
                br
                | Чижов
            .welcome__scroll-btn
              a.scroll-btn Скролл
                +icon('scroll', 'scroll-icon')